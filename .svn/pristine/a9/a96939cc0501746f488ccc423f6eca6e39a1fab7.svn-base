				select SUM(odt.number) from odr_orderdetail as odt,odr_order AS od where odt.productid=t.id
													
													
														
			
			) AS yxl,
			IFNULL((
				SELECT
					sum(t1.salecount)
				FROM
					pdt_specvalue t1
				WHERE
					t.id = t1.productid
			),0) AS salecount,
			CASE t.status
			    WHEN 1 THEN '上架'
	            WHEN 2 THEN '下架'
	            ELSE ''
	        END as status,
	        t.standardprice,
			date_format(t.createtime,'%Y-%m-%d') as createtime
		FROM
			pdt_product t
	    <include refid="where" />
	    <include refid="page_sort" />
	    limit #{BEGIN_ROW},#{PAGE_SIZE}
  	</select>
  	-->
  	
  	<select id="search" parameterType="java.util.Map" resultType="java.util.HashMap">
 							 SELECT
								det.ID AS id,
								det.name AS name,
								det.createtime as createtime,
								CASE det.producttype
									    WHEN 10 THEN '照片'
							            WHEN 20 THEN '照片框'
							            WHEN 30 THEN '照片墙'
							            WHEN 40 THEN '相册'
							            WHEN 50 THEN '约拍'
							            ELSE ''
							        END as producttype,
								det.sellcount AS salecount,
								CASE det.status
		                    		WHEN 0 then '增新 不上线'
									WHEN 1 then '上线' 
									WHEN 2 then '下线' 
		                  			  ELSE ''
		               			 END as status,
								 CASE 
									WHEN det.standardprice>0 THEN det.standardprice/100
									ELSE 0
		           				 END AS standardprice,
								det.mainimg AS mainimg,
								det.plastic AS plastic,
								ifnull(num.count,0) AS yxl
							FROM
								(
									SELECT
										pdt.ID AS ID,
										pdt.name AS name,
										convert(pdt.createtime,date) as createtime,
										pdt.producttype AS producttype,
										pdt.sellcount AS sellcount,
										pdt.status AS status,
										pdt.standardprice as standardprice,
										pdt.mainimg AS mainimg,
										pdt.plastic AS plastic
									FROM
										pdt_product AS pdt
									WHERE
											pdt.qyid = #{qyid}
										<if test="producttype != null and producttype != ''">
											AND pdt.producttype =#{producttype}
										</if>
										 <if test="id != null and id != ''">
											AND pdt.ID ='${id}%'
										</if>
										 <if test="name != null and name != ''">
											AND pdt.name like'${name}%'
										</if>
										 <if test="status != null and status != ''">
											AND pdt.status =#{status}
										</if>
										
								) det
										LEFT JOIN (
											SELECT
												odt.productid AS productid,
												SUM(odt.number) AS count
											FROM
												pdt_product AS pd LEFT JOIN
												odr_orderdetail AS odt on(pd.ID = odt.productid)
												LEFT JOIN odr_order AS od on(od.orderid = odt.orderid)
											WHERE
														pd.qyid = #{qyid}
													AND od.createdate >= DATE_FORMAT(NOW(),'%Y-%m')
													and od.paystatus = 10
													<if test="producttype != null and producttype != ''">
														AND odt.producttype =#{producttype}
													</if>
													<if test="id != null and id != ''">
														AND pd.ID ='${id}%'
													</if>
													 <if test="name != null and name != ''">
														AND pd.name like '${name}%'
													</if>
													 <if test="status != null and status != ''">
														AND pd.status =#{status}
													 </if>
													 
														GROUP BY
															odt.productid								
										) AS num ON (det.ID = num.productid)
							LIMIT #{BEGIN_ROW},#{PAGE_SIZE}
							</select>
						
  	
