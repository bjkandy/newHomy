												LEFT JOIN pdt_specvalue as ps ON(pd.ID=ps.productid)
												LEFT JOIN odr_orderdetail AS odt on(ps.id=odt.specid)
												LEFT JOIN odr_order AS od on(od.orderid = odt.orderid)
